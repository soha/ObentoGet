<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:id="@+id/TableLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:stretchColumns="1">
	<TableRow android:id="@+id/TableRow01" android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:singleLine="true"
			android:text="ログイン情報を入力してください"
			android:textSize="18dip"
			android:layout_span="2"
			/>
	</TableRow>
	<TableRow android:id="@+id/TableRow02" android:layout_width="fill_parent" android:layout_height="wrap_content">
	    <TextView 
			android:text="companyCd:" 
			android:id="@+id/CompanyCdTextView" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:singleLine="true">
		</TextView>
		<EditText 
			android:text="" 
			android:id="@+id/CompanyCdEditText" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:singleLine="true">
		</EditText>
	</TableRow>
	<TableRow android:id="@+id/TableRow03" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView 
			android:text="LoginId:" 
			android:id="@+id/CustomerCdTextView" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:singleLine="true">
		</TextView>
		<EditText 
			android:text="" 
			android:id="@+id/CustomerCdEditText" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:singleLine="true">
		</EditText>
	</TableRow>
	<TableRow android:id="@+id/TableRow04" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView 
			android:text="password:" 
			android:id="@+id/PasswordTextView" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:singleLine="true">
		</TextView>
		<EditText 
			android:text="" 
			android:id="@+id/PasswordEditText" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:password="true" 
			android:singleLine="true">
		</EditText>
	</TableRow>
	<TableRow android:id="@+id/TableRow04" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<CheckBox 
			android:text="アラーム設定する" 
			android:id="@+id/AlarmCheckBox" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_span="2">
		</CheckBox>
		</TableRow>
		<TableRow android:id="@+id/TableRow04" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TimePicker
			android:id="@+id/setting_time"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_span="2">
		</TimePicker>
	</TableRow>
	<TableRow android:id="@+id/TableRow05" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button
			android:text="regist" 
			android:id="@+id/RegistButton" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_span="2">
		</Button>
	</TableRow>
</TableLayout>